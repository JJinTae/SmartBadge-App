<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@color/mainColor">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@drawable/maintext" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/mainbr" />

    <LinearLayout
        android:id="@+id/view_map_main"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn_main_map"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_safezone"
            android:text=" " />

        <Button
            android:id="@+id/btn_main_record"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_record"
            android:text=" " />

        <Button
            android:id="@+id/btn_main_logout"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_logout"
            android:text=" " />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>